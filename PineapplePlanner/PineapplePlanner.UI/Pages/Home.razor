@using MediatR
@using PineapplePlanner.Application.Interfaces
@using PineapplePlanner.Domain.Entities

@page "/"
@inject IMediator _mediator
@inject ITaskRepository _taskRepository

Todos:
<br />

@if (_todosResult != null)
{
    @foreach (Domain.Entities.Task todo in _todosResult.Todos ?? new())
    {
        <div>@todo.Id @todo.Name</div>
    }
}
else
{
    <div>Loading...</div>
}

<div>@_error</div>
